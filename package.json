{
	"name": "suggestion-box",
	"version": "1.0.0",
	"description": "A simple anonymous feedback collector webapp",
	"type": "module",
	"sideEffects": false,
	"scripts": {
		"build": "tsc -b && vite build && bunx zero-deploy-permissions -p src/zero-schema.ts --output-format=sql --output-file=.permissions.sql",
		"dev:clean": "source .env && docker volume rm -f docker_zstart_solid_pgdata && rm -rf \"${ZERO_REPLICA_FILE}\"*",
		"dev:db-down": "docker compose --env-file .env -f ./docker/docker-compose.yml down",
		"dev:db-up": "docker compose --env-file .env -f ./docker/docker-compose.yml up",
		"dev:ui": "VITE_PUBLIC_SERVER='http://localhost:4848' vite",
		"dev:ui:preview": "VITE_PUBLIC_SERVER='https://zero.agileapp3000.com' vite preview --port 5169",
		"dev:zero-cache": "zero-cache-dev -p src/zero-schema.ts",
		"db:generate": "drizzle-kit generate",
		"db:push": "drizzle-kit push",
		"db:seed": "bun tsx scripts/db-setup.ts",
		"db:studio": "drizzle-kit studio"
	},
	"keywords": ["feedback", "anonymous", "suggestion"],
	"author": "Alex Davis",
	"license": "MIT",
	"dependencies": {
		"@ark-ui/solid": "^5.1.1",
		"@rocicorp/zero": "0.17.2025031904",
		"@solidjs/router": "^0.15.3",
		"date-fns": "^4.1.0",
		"drizzle-orm": "^0.40.1",
		"drizzle-seed": "^0.3.1",
		"drizzle-zero": "^0.5.3",
		"lucide-solid": "^0.483.0",
		"pg": "^8.14.1",
		"solid-js": "^1.9.5",
		"solid-transition-group": "^0.3.0",
		"tailwindcss": "^4.0.15",
		"uuid": "^11.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@tailwindcss/vite": "^4.0.15",
		"@types/pg": "^8.11.11",
		"@types/uuid": "^10.0.0",
		"daisyui": "^5.0.9",
		"drizzle-kit": "^0.30.5",
		"hyperdx": "^0.0.0",
		"rollup-plugin-visualizer": "^5.14.0",
		"terser": "^5.39.0",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"vite": "^6.2.2",
		"vite-plugin-solid": "^2.11.6",
		"vite-plugin-unused-code": "^0.1.5"
	},
	"trustedDependencies": ["@biomejs/biome", "@rocicorp/zero-sqlite3"]
}
