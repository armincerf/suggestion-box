{
	"name": "suggestion-box",
	"version": "1.0.0",
	"description": "A simple anonymous feedback collector webapp",
	"type": "module",
	"sideEffects": false,
	"scripts": {
		"build": "tsc -b && vite build && bunx zero-deploy-permissions -p src/zero/schema.ts --output-format=sql --output-file=.permissions.sql",
		"lint": "bunx biome lint --write --unsafe ./src",
		"dev:clean": "source .env && docker volume rm -f docker_zstart_solid_pgdata && rm -rf \"${ZERO_REPLICA_FILE}\"*",
		"dev:db-down": "docker compose --env-file .env -f ./docker/docker-compose.yml down",
		"dev:db-up": "docker compose --env-file .env -f ./docker/docker-compose.yml up",
		"dev:ui": "VITE_PUBLIC_SERVER='http://localhost:4949' vite",
		"prod:ui:preview": "vite preview --port 5169",
		"prod:ui:build": "export VITE_TYPESENSE_SUGGESTIONS_COLLECTION='suggestions_prod' && export VITE_TYPESENSE_COMMENTS_COLLECTION='comments_prod' && vite build",
		"dev:poll-service": "export VITE_TYPESENSE_SUGGESTIONS_COLLECTION='suggestions_dev' && export VITE_TYPESENSE_COMMENTS_COLLECTION='comments_dev' && bun run polling-service/index.ts",
		"prod:poll-service": "export VITE_TYPESENSE_SUGGESTIONS_COLLECTION='suggestions_prod' && export VITE_TYPESENSE_COMMENTS_COLLECTION='comments_prod' && bun run polling-service/index.ts",
		"dev:zero-cache": "export ZERO_AUTH_SECRET='zero' && export ZERO_APP_ID='suggestionbdev' && export ZERO_UPSTREAM_DB='postgresql://user:password@localhost:5469/suggestion-box-dev' && export ZERO_REPLICA_FILE='/tmp/zero/zstart_solid_replica_dev.db' && zero-cache-dev -p shared/zero/schema.ts --port 4949",
		"prod:zero-cache": "export ZERO_AUTH_SECRET='zero' && export ZERO_APP_ID='suggestionbprod' && export ZERO_UPSTREAM_DB='postgresql://user:password@localhost:5469/suggestion-box-prod' && export ZERO_REPLICA_FILE='/tmp/zero/zstart_solid_replica_prod.db' && zero-cache-dev -p shared/zero/schema.ts --port 4848",
		"db:generate": "drizzle-kit generate",
		"db:push-dev": "PROD_DB_URL='postgresql://user:password@localhost:5469/suggestion-box-dev' drizzle-kit push --config=./drizzleprod.config.ts",
		"db:push-prod": "PROD_DB_URL='postgresql://user:password@localhost:5469/suggestion-box-prod' drizzle-kit push --config=./drizzleprod.config.ts",
		"db:seed": "export ZERO_UPSTREAM_DB='postgresql://user:password@localhost:5469/suggestion-box-dev' && bun tsx scripts/db-setup.ts",
		"db:studio": "drizzle-kit studio",
		"postinstall": "patch-package"
	},
	"keywords": ["feedback", "anonymous", "suggestion"],
	"author": "Alex Davis",
	"license": "MIT",
	"dependencies": {
		"@ark-ui/solid": "^5.4.0",
		"@hyperdx/browser": "^0.21.2",
		"@msgpack/msgpack": "^3.1.1",
		"@rocicorp/zero": "0.17",
		"@solidjs/router": "^0.15.3",
		"date-fns": "^4.1.0",
		"drizzle-orm": "^0.41.0",
		"drizzle-seed": "^0.3.1",
		"drizzle-zero": "^0.5.4",
		"lucide-solid": "^0.485.0",
		"partysocket": "^1.1.3",
		"pg": "^8.14.1",
		"solid-js": "^1.9.5",
		"solid-transition-group": "^0.3.0",
		"tailwindcss": "^4.0.17",
		"uuid": "^11.1.0",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@tailwindcss/vite": "^4.0.17",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/pg": "^8.11.11",
		"@types/uuid": "^10.0.0",
		"daisyui": "^5.0.9",
		"drizzle-kit": "^0.30.6",
		"hyperdx": "^0.0.0",
		"patch-package": "^8.0.0",
		"rollup-plugin-visualizer": "^5.14.0",
		"terser": "^5.39.0",
		"tsx": "^4.19.3",
		"typescript": "^5.8.2",
		"vite": "^6.2.3",
		"vite-plugin-solid": "^2.11.6",
		"vite-plugin-unused-code": "^0.1.5"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@rocicorp/zero-sqlite3",
		"esbuild",
		"protobufjs"
	]
}
